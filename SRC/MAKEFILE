all: RLINK.EXE RLIB.EXE RDFDUMP.EXE

RLINK.EXE: RLINK.PAS RDFFMT.PAS RLINKOUT.PAS
	TPC /M RLINK.PAS

RDFDUMP.EXE: RDFDUMP.PAS RDFFMT.PAS
	TPC /M RDFDUMP.PAS

RLIB.EXE: RLIB.PAS RDFFMT.PAS
	TPC /M RLIB.PAS

install: all
	COPY RLINK.EXE ..\BIN\
	COPY RLIB.EXE ..\BIN\
	COPY RDFDUMP.EXE ..\BIN\

clean:
	DEL *.TPU
	DEL *.EXE

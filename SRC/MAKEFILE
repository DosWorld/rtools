all: RLINK.EXE RLIB.EXE RDFDUMP.EXE BIN2RDF.EXE

RLINK.EXE: RLINK.PAS RDFFMT.PAS RLO.PAS RLORDF.PAS RLOCOM.PAS RLOMZ.PAS RLOPE.PAS
	TPC /M RLINK.PAS

RDFDUMP.EXE: RDFDUMP.PAS RDFFMT.PAS
	TPC /M RDFDUMP.PAS

RLIB.EXE: RLIB.PAS RDFFMT.PAS
	TPC /M RLIB.PAS

BIN2RDF.EXE: BIN2RDF.PAS RDFFMT.PAS
	TPC /M BIN2RDF.PAS

install: all
	COPY RLINK.EXE ..\BIN\
	COPY RLIB.EXE ..\BIN\
	COPY RDFDUMP.EXE ..\BIN\
	COPY BIN2RDF.EXE ..\BIN\

clean:
	DEL *.TPU
	DEL *.EXE
